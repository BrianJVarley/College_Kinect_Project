<Window x:Class="KinectKickboxingBVversion1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid x:Name="MenuFrm">
        <Grid.Background>
            <ImageBrush ImageSource="Images/BoxingBags.jpg" Opacity="0.3"/>
        </Grid.Background>

        <Button x:Name="trainingBtn" Background="BlueViolet" Content="Training"  HorizontalAlignment="Left" Margin="193,122,0,0" VerticalAlignment="Top" Width="130" Height="39" Click="trainingBtn_Click"/>
        <Button x:Name="conditioningBtn" Background="BlueViolet" Content="Conditioning" HorizontalAlignment="Left" Margin="193,195,0,0" VerticalAlignment="Top" Width="130" Height="39" Click="conditioningBtn_Click"/>
        <Image Name="KinectVideo" Margin="343,10,10,27"/>
    </Grid>
</Window>
